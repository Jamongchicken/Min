def solution(n):
    answer = ''

    while n > 0:			
        n, re = divmod(n,3)
        answer += str(re)
    return int(answer, 3)



def solution(n):
    three = ''
    while n > 0:
        three += str(n%3)
        n = n//3
    answer = 0
    count = 1
    
    for eachChar in reversed(three):
        answer += count * int(eachChar)
        count *= 3
    return answer
